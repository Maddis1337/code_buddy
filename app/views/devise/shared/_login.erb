<%= form_for(user_resource, :as => user_resource_name, :url => session_path(user_resource_name), :html => { :role => 'form'}) do |f| %>

  <div class="form-group">
    <%= f.text_field :login, :autofocus => true, placeholder: "Email or Username", class: 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>
  </div>
  <%= f.submit 'Log in', :class => 'button right' %>
  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
  <% end -%>
<% end %>
<%= render "devise/shared/links" %>
